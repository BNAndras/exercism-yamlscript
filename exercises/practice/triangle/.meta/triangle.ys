defn equilateral(sides):
  and:
    (sides.0 > 0)
    (= sides*)

defn isosceles(sides):
  +[a b c] =: sides.sort()
  and:
    ((a + b ) > c)
    (sides.frequencies().count() <= 2)

defn scalene(sides):
  and:
    not: isosceles(sides)
    =>:
      +[a b c] =: sides.sort()
      =>: (a + b) > c
