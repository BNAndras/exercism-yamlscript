!yamlscript/v0

pairs =: '()[]{}'
pairs .=: split().reverse().to-map()
opening =: set(pairs.vals())
closing =: set(pairs.keys())

defn is-paired(value):
  loop [char *chars] split(value), stack []:
    stack =:
      cond:
        opening(char):
          conj stack: char
        closing(char):
          when peek(stack) == pairs(char):
            pop: stack
        else: stack

    cond:
      stack.nil?(): false
      chars.empty?(): empty?(stack)
      else: recur(chars stack)
