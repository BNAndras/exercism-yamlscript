!yamlscript/v0

allergens =::
- eggs
- peanuts
- shellfish
- strawberries
- tomatoes
- chocolate
- pollen
- cats

allergen-nums =:
  zipmap allergens: range()

defn allergic-to(item score):
  bit-test score: allergen-nums.$item

defn list-allergens(score):
  test-allergen =:
    fn([allergen num]):
      when bit-test(score num):
        allergen
  =>:
    allergen-nums
      .seq()
      .map(test-allergen)
      .remove(nil?)
