defn isogram?(string):
  or empty?(string):
    string
      .lc()                              \#"Want to be case insensitive"
      .split()                           \#"Split string into chars"
      .filter(partial(re-matches /\w/))  \#"Keep letters only"
      .apply(distinct?)                  \#"Check if distinct letters"
