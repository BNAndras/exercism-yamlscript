!yamlscript/v0

letter-values =::
  AEIOULNRST : 1
  DG         : 2
  BCMP       : 3
  FHVWY      : 4
  K          : 5
  JX         : 8
  QZ         : 10

letter-score =:
  reduce _ {} seq(letter-values):
    fn(dict [letters score]):
      merge dict:
        zipmap letters.split(): repeat(score)

defn score(word):
  word:
    .uc()
    .split()
    .map(letter-score)
    .sum()
