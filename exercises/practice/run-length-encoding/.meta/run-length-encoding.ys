!yamlscript/v0

defn encode(string):
  apply str:
    for part partition-by(just string):
      len =: part.#
      str:
        (len > 1).when(len) part.0

defn decode(string):
  ? loop
      [p1 p2 *parts]
        re-seq(/\d+|[^\d]/ string)
      val ''
  : if p1:
      if p1 =~ /\d/:
        recur parts: "$val$(to-int(p1) * p2)"
        recur cons(p2 parts): "$val$p1"
      else: val

defn consistency(string):
  string.encode().decode()
