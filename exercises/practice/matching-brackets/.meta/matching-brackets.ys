!yamlscript/v0

pairs =::
  ')': '('
  ']': '['
  '}': '{'
opening =: pairs.vals().set()
closing =: pairs.keys().set()

defn is-paired(value):
  loop [char & chars] split(value), stack []:
    stack =:
      cond:
        opening(char):
          conj stack: char
        closing(char):
          when peek(stack) == pairs(char):
            pop: stack
        else: stack

    cond:
      stack.nil?(): false
      empty?(chars): empty?(stack)
      else: recur(chars stack)
