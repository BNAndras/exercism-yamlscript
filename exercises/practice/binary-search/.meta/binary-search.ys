defn find(array value):
 loop [low 0, high array.count().dec()]:
   when (low > high):
     die: 'value not in array'
   mid =: quot((high + low) 2)
   item =: array.get(mid)
   cond:
     value == item : mid
     value <  item : recur(low mid.dec())
     =>            : recur(mid.inc() high)
